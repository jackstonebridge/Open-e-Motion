main[view-home]
  height: 100%
  width: 100%
  header
    height: calc( 40vh + 25vh )
    width: 100%
    width: calc( 100vw * 3 )
    max-width: 100%
    position: absolute
    top: 0
    display: flex
    flex-direction: row
    align-items: flex-end
    background: lightGray
    overflow: scroll
    .boxWrapper
      min-width: 100vw
      max-width: 100vw
      height: 25vh
      position: relative
      display: flex
      justify-content: center
      align-items: flex-start
      z-index: 100
      .box
        width: 80vw
        height: 25vh
        background: white
        position: absolute
        top: -5vh
        box-shadow: 0px 0px 20px rgba(0,0,0,0.1)
        border-radius: 8px
        z-index: 101
    .hero
      height: 40vh
      width: 100%
      position: fixed
      top: 0
      bottom: 25vh
      background-image: url(../images/headBike.jpg)
      background-position: center center
      background-size: auto 100%
      background-repeat: no-repeat
      z-index: 90
  footer
    height: calc( 35vh - 50px * 2 )
    width: calc( 100vw - 50px * 2 )
    padding: 50px
    position: absolute
    top: auto
    bottom: 0
    background: #FFF
    box-shadow: 0px 0px 100px rgba(0,0,0,0.2)
    h1
      margin: 0 0 10px 0
      text-align: center
    p
      margin: 0 0 0 0
      text-align: left
